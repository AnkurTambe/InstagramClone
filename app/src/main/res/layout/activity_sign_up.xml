<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LogInActivity">

    <RelativeLayout
        android:id="@+id/rl_signup_sig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tv_insta_name_sig"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/instagram"
            app:tint="@color/black" />

        <EditText
            android:id="@+id/et_fullname_sig"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_insta_name_sig"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_et"
            android:fontFamily="@font/proxim_nova"
            android:hint="FullName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_username_sig"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_fullname_sig"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_et"
            android:fontFamily="@font/proxim_nova"
            android:hint="UserName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_email_sig"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_username_sig"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_et"
            android:fontFamily="@font/proxim_nova"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_pass_sig"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_email_sig"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_et"
            android:fontFamily="@font/proxim_nova"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signup_sig"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_pass_sig"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_btn"
            android:backgroundTint="@color/light_blue"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_log_sig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_signup_sig"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_login_log"
                android:fontFamily="@font/proxim_nova"
                android:text="Already have an account?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_login_sig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_login_log"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/proxim_nova"
                android:text="Log In"
                android:textColor="@color/navy_blue"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>